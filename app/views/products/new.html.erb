<%= form_for @product do |f| %>
  <div style="margin: 8px 0">
    <%= f.text_field :title, placeholder: 'タイトル',autofocus: true %>
  </div>
  <div style="margin: 8px 0">
    <%= f.text_area :text, placeholder: '投稿記事を書く', style: 'width: 100%;height: 300px;' %>
  </div>
  <div class="row">
    <div class="col10 push1">
      <%= button_tag type: "submit", class: "btn btn--block" do %>
      投稿する<i class="icon-arrow-right"></i>
      <% end %>
    </div>
  </div>
<% end %>
